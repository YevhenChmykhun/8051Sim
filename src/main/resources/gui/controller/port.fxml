                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                        </TextField>
                        <GridPane HBox.hgrow="NEVER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" vgrow="NEVER" />
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <GridPane alignment="BOTTOM_CENTER" GridPane.rowIndex="1">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints valignment="CENTER" vgrow="NEVER" />
                                    </rowConstraints>
                                    <children>
                                        <CheckBox fx:id="pin7" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="0" />
                                        <CheckBox fx:id="pin6" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="1" />
                                        <CheckBox fx:id="pin5" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="2" />
                                        <CheckBox fx:id="pin4" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="3" />
                                        <CheckBox fx:id="pin3" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="4" />
                                        <CheckBox fx:id="pin2" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="5" />
                                        <CheckBox fx:id="pin1" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="6" />
                                        <CheckBox fx:id="pin0" mnemonicParsing="false" style="-fx-label-padding: 0;" GridPane.columnIndex="7" />
                                    </children>
                                </GridPane>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
                                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
                                        <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints valignment="CENTER" vgrow="NEVER" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="7" />
                                        <Label text="Bits" GridPane.columnIndex="1" />
                                        <Label text="0" GridPane.columnIndex="2" />
                                    </children>
                                </GridPane>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
